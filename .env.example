# Smart Goggles Configuration

# Object detection settings
YOLO_MODEL=yolov8n.pt
CONFIDENCE_THRESHOLD=0.5
PROXIMITY_THRESHOLD=0.2

# Speech settings
USE_GTTS=False  # Set to True to use Google Text-to-Speech instead of pyttsx3
SPEECH_LANGUAGE=en-US  # Language code for speech recognition (e.g., en-US, en-GB, es-ES, fr-FR, etc.)
SPEECH_RECOGNITION_ENGINE=google  # Options: 'google' (online) or 'sphinx' (offline)

# OCR settings
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe  # Path to tesseract executable (for Windows)

# Vision AI model settings
VISION_MODEL=gemini  # Options: 'gemini' or 'openai'
# Note: Using gemini-1.5-flash model (gemini-pro-vision was deprecated on July 12, 2024)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Camera settings
CAMERA_ID=0  # Default webcam
FRAME_WIDTH=640
FRAME_HEIGHT=480
FPS=30


# Smart Goggles Configuration

# Object detection settings
YOLO_MODEL=yolov8n.pt
CONFIDENCE_THRESHOLD=0.5
PROXIMITY_THRESHOLD=0.2

# Speech settings
USE_GTTS=False  # Set to True to use Google Text-to-Speech instead of pyttsx3
SPEECH_LANGUAGE=en-IN  # Language code for speech recognition (e.g., en-IN, en-GB, es-ES, fr-FR, etc.)
SPEECH_RECOGNITION_ENGINE=google  # Options: 'google' (online) or 'sphinx' (offline)

# OCR settings
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe  # Path to tesseract executable (for Windows)

# OCR Service Selection
OCR_SERVICE=tesseract  # Options: 'tesseract', 'azure', 'aws'
OCR_TEXT_PREPROCESSING=True  # Enable text preprocessing for better results
OCR_CONFIDENCE_THRESHOLD=40  # Minimum confidence score for OCR results (0-100)

# Azure Computer Vision OCR
AZURE_VISION_KEY=your_key_here  # API key for Azure Computer Vision
AZURE_VISION_ENDPOINT=https://your-region.api.cognitive.microsoft.com/  # Azure endpoint

# AWS Textract OCR
AWS_ACCESS_KEY=your_access_key_here  # AWS access key
AWS_SECRET_KEY=your_secret_key_here  # AWS secret key
AWS_REGION=us-east-1  # AWS region for Textract

# Vision AI model settings
